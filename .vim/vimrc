"From changemewtf vim-no-plugins
set nocompatible
syntax enable
filetype plugin on
set path+=**
map <Leader>t :let $VIM_DIR=expand('%:p:h')<CR>:terminal<CR>cd $VIM_DIR<CR>
     
         
         

let g:netrw_banner=0        " disable annoying banner
"let g:netrw_browse_split=4  " open in prior window
"let g:netrw_altv=1          " open splits to the right
"let g:netrw_liststyle=3     " tree view
"let g:netrw_list_hide=netrw_gitignore#Hide()
"let g:netrw_list_hide.=',\(^\|\s\s\)\zs\.\S\+'

"My mappings
set nu rnu
set wildmenu
set wildmode=longest:list,full

set tabstop=4
set shiftwidth=0
set expandtab

"set colorcolumn=78
"hi ColorColumn ctermbg=grey guibg=grey

""left hand grid
"inoremap ä 0
"inoremap å ^ 
"inoremap é (
"inoremap ë )
"inoremap á {
"inoremap ß }
"inoremap ð %
""inoremap f
"inoremap æ $
"inoremap œ $
"inoremap © [
"inoremap ® ]
"
""2 middle columns
"inoremap þ $
""inoremap g
""inoremap b
"inoremap ü `
""inoremap h
"inoremap ñ ~ 
"
""right hand grid
"inoremap ú 7
"inoremap ˙ 3
"
